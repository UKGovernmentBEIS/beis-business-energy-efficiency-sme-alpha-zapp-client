<Window x:Class="RemindSME.Desktop.Views.WelcomeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://www.caliburnproject.org"
        xmlns:controls="clr-namespace:Notifications.Wpf.Controls;assembly=Notifications.Wpf"
        Icon="../RemindSME.ico"
        Title="Welcome to RemindS ME"
        SizeToContent="Height"
        Width="480">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#EF103C"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Label Content="{TemplateBinding Content}"
                               Foreground="{TemplateBinding Foreground}"
                               Background="{TemplateBinding Background}"
                               HorizontalContentAlignment="Center"
                               MinWidth="80"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F02049"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#DF0F38"/>
                                <Setter Property="Foreground" Value="#AAAAAA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <StackPanel>
        <Label
            Content="Welcome to RemindS ME"
            Height="75"
            Background="#EF103C"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            FontSize="30"
            FontWeight="Bold"
            Foreground="White"/>
        <StackPanel Margin="40">
            <Label
                Content="Thanks for installing the RemindS ME app!"
                FontSize="20"
                Margin="0, 0, 0, 0" />
            <TextBlock Text="This app will help you to stay energy-conscious by reminding you to do things like hibernate your computer when you leave each day, and adjust the heating when it's hot outside."
                       Margin="0, 10, 0, 0"
                       TextWrapping="Wrap"
                       Width="400"
                       HorizontalAlignment="Left"/>
            <TextBlock Text="Let's get started by setting up your preferences. You'll be able to opt in or out of certain types of notification and choose a time to be prompted to hibernate your machine when you usually leave for the day."
                       Margin="0, 10, 0, 0"
                       TextWrapping="Wrap"
                       Width="400"
                       HorizontalAlignment="Left"/>
            <Button Content="Next" cal:Message.Attach="OpenHubWindow"
                    Margin="0, 20, 0, 0"
                    HorizontalAlignment="Left"/>
        </StackPanel>
    </StackPanel>
</Window>