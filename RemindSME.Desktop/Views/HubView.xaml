<Window x:Class="RemindSME.Desktop.Views.HubView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hub" Height="450" Width="800">
    <StackPanel Margin="40">
        <CheckBox x:Name="HeatingOptIn">
            <Label Content="Opt-in for heating notifications" />
        </CheckBox>
        <CheckBox x:Name="LightingOptIn">
            <Label Content="Opt-in for lighting notifications" />
        </CheckBox>
        <ComboBox x:Name="HibernateHours" IsEditable="True"/>
        <ComboBox x:Name="HibernateMinutes" IsEditable="True"/>
    </StackPanel>
</Window>