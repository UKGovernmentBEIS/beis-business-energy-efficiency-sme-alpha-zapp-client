<Window x:Class="RemindSME.Desktop.Views.HubView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="../RemindSME.ico"
        Title="RemindS Me Custom Hub" Height="500" Width="650">
    <StackPanel>
        <Label
            Content="RemindS ME Custom Hub"
            Height="75"
            Background="#EF103C"
            VerticalContentAlignment="Center"
            FontSize="30"
            FontWeight="Bold"
            Foreground="White"
            Padding="40, 0 0, 0" />
        <StackPanel Margin="40">
            <Label
                Content="Choose settings that suit you:"
                FontSize="20"
                Margin="0 0 0 20" />
            <CheckBox x:Name="HeatingOptIn"
                      FlowDirection="RightToLeft"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Left"
                      Margin="0,0,0,0">
                <CheckBox.Resources>
                    <Style TargetType="{x:Type Path}">
                        <Setter Property="FlowDirection" 
                                Value="LeftToRight" />
                    </Style>
                </CheckBox.Resources>
                <Label Content="Opt-in for heating notifications"
                       FlowDirection="LeftToRight"
                       VerticalAlignment="Center"
                       Margin="0,-5,0,0" />
            </CheckBox>
            <StackPanel Orientation="Horizontal" >
                <TextBlock Text="What time do you normally leave?"
                           VerticalAlignment="Center"
                           Margin="5,0,0,0" />
                <ComboBox x:Name="HibernateHours" 
                          Width="50px"
                          Margin="10,0,0,0"/>
                <TextBlock Text=":"
                           VerticalAlignment="Center"
                           Margin="5,0,5,0" />
                <ComboBox x:Name="HibernateMinutes" 
                          Width="50px" />
            </StackPanel>
            <TextBlock Text="If this is set to a time that has already past today or is within the next 15 minutes, the first scheduled hibernation will happen tomorrow."
                       Margin="5,10,0,0"
                       TextWrapping="Wrap"
                       Width="400"
                       HorizontalAlignment="Left"/>
            <TextBlock x:Name="NextHibernationTime"
                       Margin="5,10,0,0"
                       TextWrapping="Wrap"
                       Width="400"
                       HorizontalAlignment="Left"/>
        </StackPanel>
    </StackPanel>
</Window>