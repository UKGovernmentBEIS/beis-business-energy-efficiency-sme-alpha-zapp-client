<Window x:Class="RemindSME.Desktop.Views.HubView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://www.caliburnproject.org"
        Title="RemindS Me Custom Hub" Height="450" Width="650">
    <StackPanel>
        <StackPanel.Resources>
            <Style x:Key="HyperlinkButton" TargetType="Button">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <ContentPresenter/>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </StackPanel.Resources>
        <Label
            Content="RemindS ME Custom Hub"
            Height="75"
            Background="#EF103C"
            VerticalContentAlignment="Center"
            FontSize="30"
            FontWeight="Bold"
            Foreground="White"
            Padding="40, 0 0, 0" />
        <StackPanel Margin="40">
            <Label
                Content="Choose settings that suit you:"
                FontSize="20"
                Margin="0 0 0 20" />
            <CheckBox x:Name="HeatingOptIn"
                      FlowDirection="RightToLeft"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Left"
                      Margin="0,0,0,0">
                <CheckBox.Resources>
                    <Style TargetType="{x:Type Path}">
                        <Setter Property="FlowDirection" 
                                Value="LeftToRight" />
                    </Style>
                </CheckBox.Resources>
                <Label Content="Opt-in for heating notifications"
                       FlowDirection="LeftToRight"
                       VerticalAlignment="Center"
                       Margin="0,-5,0,0" />
            </CheckBox>
            <Button Style="{StaticResource HyperlinkButton}" 
                    Focusable="False" 
                    Margin="5,0,0,20"
                    cal:Message.Attach="[Action NavigateTo('http://www.softwire.com')]">
                <TextBlock>
                    <Hyperlink Focusable="False">What is this?</Hyperlink>
                </TextBlock>
            </Button>
            <CheckBox x:Name="LightingOptIn"
                      FlowDirection="RightToLeft"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Left"
                      Margin="0,0,0,0">
                <CheckBox.Resources>
                    <Style TargetType="{x:Type Path}">
                        <Setter Property="FlowDirection" 
                                Value="LeftToRight" />
                    </Style>
                </CheckBox.Resources>
                <Label Content="Opt-in for lighting notifications"
                       VerticalAlignment="Center"
                       Margin="0,-5,0,0" />
            </CheckBox>
            <Button Style="{StaticResource HyperlinkButton}" 
                    Focusable="False" 
                    Margin="5,0,0,20"
                    cal:Message.Attach="[Action NavigateTo('http://www.softwire.com')]">
                <TextBlock>
                    <Hyperlink Focusable="False">What is this?</Hyperlink>
                </TextBlock>
            </Button>
            <StackPanel Orientation="Horizontal" >
                <TextBlock Text="What time do you normally leave?"
                           VerticalAlignment="Center"
                           Margin="5,0,0,0" />
                <ComboBox x:Name="HibernateHours" 
                          Width="50px"
                          Margin="10,0,0,0"/>
                <TextBlock Text=":"
                           VerticalAlignment="Center"
                           Margin="5,0,5,0" />
                <ComboBox x:Name="HibernateMinutes" 
                          Width="50px" />
            </StackPanel>
            <Button Style="{StaticResource HyperlinkButton}" 
                    Focusable="False" 
                    Margin="5,0,0,0"
                    cal:Message.Attach="[Action NavigateTo('http://www.softwire.com')]">
                <TextBlock>
                    <Hyperlink Focusable="False">What is this?</Hyperlink>
                </TextBlock>
            </Button>
        </StackPanel>
        <Button Style="{StaticResource HyperlinkButton}" 
                Focusable="False" 
                HorizontalAlignment="Right" 
                Margin="0,0,40,0" 
                FontSize="16px"
                cal:Message.Attach="[Action NavigateTo('http://www.softwire.com')]">
            <TextBlock>
                <Hyperlink Focusable="False">Want to do more?</Hyperlink>
            </TextBlock>
        </Button>
    </StackPanel>
</Window>